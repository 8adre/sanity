{
  "name": "sanity",
  "private": true,
  "isSanityMonorepo": true,
  "scripts": {
    "bootstrap": "yarn build:cli",
    "dev": "yarn dev:forms",
    "dev:forms": "cd examples/forms && yarn dev",
    "rebuild": "gulp build",
    "build": "gulp clean && gulp build && yarn package",
    "build:cli": "lerna run --scope '@sanity/{cli,client,core,export,import,mutator,resolver,server,util,webpack-loader}' build",
    "clean": "gulp clean && lerna clean",
    "publish": "yarn build && lerna publish --exact",
    "publish-canary": "RELEASE_TAG=canary yarn publish-tag",
    "publish-current-branch": "RELEASE_TAG=`git rev-parse --abbrev-ref HEAD` yarn publish-tag",
    "publish-tag": "RELEASE_TAG=\"${RELEASE_TAG:-canary}\"; lerna publish --canary --force-publish --no-git-tag-version --dist-tag=$RELEASE_TAG --preid=$RELEASE_TAG --exact",
    "package": "yarn package-yarn && yarn package-cli",
    "package-cli": "(cd packages/@sanity/cli && yarn pack)",
    "package-yarn": "(cd packages/@sanity/cli && yarn package-yarn)",
    "init": "lerna clean --yes && yarn bootstrap",
    "deploy-test": "yarn build && cd examples/test-studio && sanity deploy",
    "deploy-movies": "yarn build && cd examples/movies-studio && sanity deploy",
    "lint": "yarn eslint -- .",
    "eslint": "node_modules/.bin/eslint --ext=.js,.jsx,.mjs,.ts,.tsx --quiet",
    "lint:fix": "eslint . --quiet --fix",
    "start": "yarn test-studio",
    "storybook": "cd examples/storybook && yarn start",
    "ecommerce-studio": "cd examples/ecommerce-studio && yarn start",
    "test-studio": "cd examples/test-studio && yarn start",
    "clean-studio": "cd examples/clean-studio && yarn start",
    "design-studio": "cd examples/design-studio && yarn start",
    "example-studio": "cd examples/example-studio && yarn start",
    "movies-studio": "cd examples/movies-studio && yarn start",
    "blog-studio": "cd examples/blog-studio && yarn start",
    "stylelint": "stylelint \"**/*.css\"",
    "stylelint:fix": "stylelint \"**/*.css\" --fix",
    "test": "echo 'Run `yarn test-all` to run `yarn test` for every package'",
    "test-all": "lerna run test --concurrency=2 --stream",
    "updated": "lerna updated",
    "watch": "gulp watch",
    "release-notes": "node scripts/printReleaseNotesTemplate.js",
    "versions": "node scripts/normalizeDependencyVersions.js",
    "normalize-pkgfields": "node scripts/normalizePackageFields.js",
    "prettify": "lerna run clean && yarn prettier -- --write",
    "prettier": "node_modules/.bin/prettier '**/*.{ts,js,tsx,jsx}'",
    "verify-format": "yarn prettier -- -c",
    "postinstall": "yarn bootstrap",
    "vercel-build": "yarn build && cd examples/test-studio && yarn build -- -y",
    "type-check": "lerna run --parallel type-check"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@babel/register": "^7.7.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "@vercel/node": "^1.8.3",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-lodash": "^3.3.4",
    "boxen": "^4.1.0",
    "chalk": "^2.3.0",
    "deepmerge": "^3.3.0",
    "del": "^5.1.0",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-es5": "^1.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "execa": "^1.0.0",
    "glob": "^7.1.2",
    "globby": "^9.2.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-filter": "^6.0.0",
    "gulp-newer": "^1.4.0",
    "gulp-notify": "^3.2.0",
    "gulp-plumber": "^1.2.1",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^5.0.1",
    "gulp-watch": "^5.0.1",
    "hard-rejection": "^2.1.0",
    "husky": "^2.5.0",
    "lerna": "^3.16.4",
    "lodash": "^4.17.15",
    "merge-stream": "^2.0.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "path-exists-cli": "^1.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.1.2",
    "rimraf": "^2.7.1",
    "semver": "^6.1.2",
    "stylelint": "^13.4.1",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-prettier": "^1.1.2",
    "typescript": "^4.0.2",
    "yarn": "^1.3.2"
  },
  "husky": {
    "hooks": {
      "commitmsg": "node scripts/validateCommitMessage.js"
    }
  },
  "workspaces": [
    "examples/*",
    "packages/@sanity/*",
    "packages/create-sanity",
    "packages/groq",
    "packages/sanity"
  ]
}
