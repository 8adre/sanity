{
  "extends": "../../../tsconfig",
  "include": ["src"],
  "compilerOptions": {
    "strict": false,
    "outDir": "./lib",
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ],

    "paths": {
      "part:@sanity/default-layout/tool-switcher": [
        "./@sanity/default-layout/src/components/toolMenu"
      ],
      "part:@sanity/default-layout/sidecar-datastore": [
        "./@sanity/default-layout/src/datastores/sidecar"
      ]
    }
  }
}
