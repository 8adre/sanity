{
  "extends": "../../../tsconfig",
  "include": ["src"],
  "compilerOptions": {
    "outDir": "./lib",
    "strict": false,
    "strictNullChecks": false,
    "jsx": "react",
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$"
        }
      }
    ],

    // Paths
    "paths": {
      "part:@sanity/base/datastore/history": ["./@sanity/base/src/datastores/history"],
      "part:@sanity/base/user": ["./@sanity/base/src/datastores/user"]
    }
  }
}
